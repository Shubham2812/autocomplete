<!DOCTYPE html>
<html>
<head>
	<title> Home Page </title>
</head>
<body>
	<%= form_tag '/item/add', id:  'add' do %>
		<%= text_field_tag :name %>
		<%= submit_tag 'Add Item' %>
	<% end %>

	<%= form_tag '/item/search', id: 'search' do %>
		<%= text_field_tag :search, nil, :autocomplete => 'off' %>
		<%= submit_tag :Search %>
	<% end %>

	<div id="search_results">
		
	</div>

	<ol id="list">
	<% @items.each do |item| %>
	<li> <%= item.name %> </li>
	<% end %>
</body>
</html>